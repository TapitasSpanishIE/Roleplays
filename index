<script>
    let level = "Higher";
    function selLvl(l) { 
        level = l; 
        document.querySelectorAll('.btn-level').forEach(b => b.classList.remove('active'));
        event.target.classList.add('active');
    }

    function startRP(id, name) {
        const chat = document.getElementById('chat');
        chat.innerHTML += `<div class="bubble st">He seleccionado: ${name} (${level} Level)</div>`;
        
        let intro = "";
        if(id === 5) intro = "<b>Examinador:</b> ¬°Hola, buenas tardes! Debes estar entre Medina del Campo y Tordesillas. He recibido tu aviso de aver√≠a en la AP-6. ¬øHay alguna se√±al de tr√°fico por ah√≠?";
        if(id === 1) intro = "<b>Examinador:</b> ¬°Hola, d√≠game! Entiendo que vienes de Erasmus a C√°ceres. ¬øEn qu√© parte de la ciudad querr√≠as vivir?";
        if(id === 2) intro = "<b>Examinador:</b> Buenos d√≠as. Veo que tienes problemas con el port√°til. ¬øQu√© le pasa exactamente a la pantalla?";
        
        setTimeout(() => {
            chat.innerHTML += `<div class="bubble ex">${intro}</div>`;
            chat.scrollTop = chat.scrollHeight;
        }, 800);
    }

    function sendMessage() {
        const input = document.getElementById('userInput');
        if(!input.value) return;
        const chat = document.getElementById('chat');
        chat.innerHTML += `<div class="bubble st">${input.value}</div>`;
        input.value = "";
        chat.scrollTop = chat.scrollHeight;
    }
</script>

